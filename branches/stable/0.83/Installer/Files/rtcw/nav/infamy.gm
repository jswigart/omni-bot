	//SetAvailableMapGoals( TEAM.ALLIES, true, "CALLARTILLERY_bRoad.*" );
	//SetAvailableMapGoals( TEAM.ALLIES, true, "ARTILLERY_S_bRoad.*" );
	SetAvailableMapGoals( TEAM.ALLIES, true, "DEFEND_bHospital.*" );
	SetAvailableMapGoals( TEAM.ALLIES, true, "GRENADE_bHospital.*" );
	//SetAvailableMapGoals( TEAM.ALLIES, true, "SWITCH_hospital" );
	
	MapRoutes =
	{
		FLAG_documents =
		{
			ROUTE_flagspawn =
			{
				ROUTE_alohanorth =
				{
					ROUTE_hangarwest =
					{
						ROUTE_ducts = {},
						ROUTE_maindoor = {Weight = 3,},
					},
					ROUTE_hangareast = 
					{
						ROUTE_ducts = {},
						ROUTE_maindoor = {Weight = 3,},
					},
				},
			},
		},
		ROUTE_rspawn =
		{
			ROUTE_hospital =
			{
				ROUTE_hospitaleast = 
				{
					ROUTE_hospitaltunnel = {},
					ROUTE_hangarwest =
					{
						ROUTE_ducts = {},
						ROUTE_maindoor = {Weight = 3,},
					},
					ROUTE_hangareast = 
					{
						ROUTE_ducts = {},
						ROUTE_maindoor = {Weight = 3,},
					},
				},
				ROUTE_alohanorth =
				{
					ROUTE_hangarwest =
					{
						ROUTE_ducts = {},
						ROUTE_maindoor = {Weight = 3,},
					},
					ROUTE_hangareast = 
					{
						ROUTE_ducts = {},
						ROUTE_maindoor = {Weight = 3,},
					},
				},
			},
