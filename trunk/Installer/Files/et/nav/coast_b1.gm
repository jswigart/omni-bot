	Util.SetGoalPosition( 297.35, 4913, 819, "PLANT_Wooden_Gate" ) ;
//~	Util.SetGoalPosition( 1049.7, -1089, 552.145, Map.Build_Tank ) ;
//~	ETUtil.LimitToClass("PLANT_Sidegate" , TEAM.ALLIES, CLASS.COVERTOPS);
//~	ETUtil.LimitToClass("PLANT_Wooden_Gate" , TEAM.ALLIES, CLASS.COVERTOPS);

	SetMapGoalProperties( "DEFEND_.*", {MinCampTime=30, MaxCampTime=90} );
