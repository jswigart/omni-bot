	SetAvailableMapGoals( TEAM.ALLIES, false, "ATTACK_aobj.*" );
	SetAvailableMapGoals( TEAM.ALLIES, false, "ATTACK_araft.*" );
	SetAvailableMapGoals( TEAM.AXIS, false, "ATTACK_.*" );
