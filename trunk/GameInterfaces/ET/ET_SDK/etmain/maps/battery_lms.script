hatch_controller
{
	activate
	{
		trigger hatch open
	}
}

hatch
{
	trigger open
	{
		accum 0 abort_if_equal 1
		accum 0 set 1
		wait 50
		playsound sound/movers/doors/door5_open.wav
		faceangles 0 0 270 1500

		wait 3000
		trigger hatch close
	}

	trigger close
	{
		wait 50
		playsound sound/movers/doors/door5_close.wav
		faceangles 0 0 0 1500
		playsound sound/movers/doors/door5_endc.wav

		accum 0 set 0
	}
}

