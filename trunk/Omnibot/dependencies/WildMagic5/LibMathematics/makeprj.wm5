CFG ?= Debug
SYS ?= Linux

CFLAGS := -c -D__LINUX__
ARFLAGS := rs
EXT := a

ifeq (linux,$(findstring Linux,$(SYS)))
CC := /usr/bin/g++
AR := /usr/bin/ar
endif

ifeq (Debug,$(findstring Debug,$(CFG)))
CFLAGS += -g -D_DEBUG
else
CFLAGS += -O2 -DNDEBUG
endif

ifeq (Dynamic,$(findstring Dynamic,$(CFG)))
CFLAGS += -fPIC
AR := $(CC)
ARFLAGS := -shared -fPIC -o
EXT := so
endif

INCPATH := \
    -I ../. \
    -I ../Algebra \
    -I ../Approximation \
    -I ../Base \
    -I ../ComputationalGeometry \
    -I ../Containment \
    -I ../CurvesSurfacesVolumes \
    -I ../Distance \
    -I ../Interpolation \
    -I ../Intersection \
    -I ../Meshes \
    -I ../Miscellaneous \
    -I ../NumericalAnalysis \
    -I ../Objects2D \
    -I ../Objects3D \
    -I ../Query \
    -I ../Rational \
    -I ../../SDK/Include

INCDIR := ../../SDK/Include
INC := $(wildcard Wm5*.h) $(wildcard Wm5*.inl)
INC := $(notdir $(INC))
SRC := $(wildcard Wm5*.cpp)
SRC := $(notdir $(SRC))
OBJDIR := ../$(CFG)
OBJ := $(SRC:%.cpp=$(OBJDIR)/%.o)
LIB := ../../SDK/Library/$(CFG)/libWm5Mathematics.$(EXT)

build : $(OBJ)
	$(AR) $(ARFLAGS) $(LIB) $(OBJDIR)/*.o
	cp -fp $(INC) $(INCDIR)

$(OBJDIR)/%.o : %.cpp
	$(CC) $(INCPATH) $(CFLAGS) $< -o $@

clean :
	rm -f $(OBJDIR)/*.o
